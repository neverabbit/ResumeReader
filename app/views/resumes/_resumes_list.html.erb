<ul class="resumes">
	<% @resumes.each do |resume| %>
		<!-- <li> -->
		<div id="" class="panel panel-default">
			<div class="panel-heading">
				<p><span class="resume_label">姓名：</span><%= link_to resume.name, resume.resume_file.url %></p>
				<p><span class="resume_label">电话：</span><%= resume.phone %></p>
			</div>
			<div class="panel-body">
				<p><span class="resume_label">城市：</span><%= resume.city %></p>
				<p><span class="resume_label">工作年限：</span><%= resume.period ||= nil %><%= "年" if resume.period.present? %></p>	
				<p><span class="resume_label">当前职位：</span><%= resume.position %></p>
				<p><span class="resume_label">学历：</span><%= resume.education %></p>
				<p><span class="resume_label">技能：</span><%= resume.quality %></p>
				<p><span class="resume_label">工作经历：</span><%= resume.experience %></p>
				<p><span class="resume_comment">备注：</span><%= resume.comment ||= "无" %> (上次备注时间：<%= resume.commented_at ||= "无" %>)</p>
				
			</div>
		<!-- </li> -->
		</div>
	<% end %>
</ul>